{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "LibraryManagementDbContext": "Data Source=(localDb)\\MSSQLLocalDB;Initial Catalog=LibraryManagementSystemDb;trusted_connection=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "E:\\Backend Tasks\\DotNet-Practice\\Web Api Playground\\LibraryManagementSystem-WebApi\\LibraryManagement\\LibraryManagementAPI/logs/log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "E:\\Backend Tasks\\DotNet-Practice\\Web Api Playground\\LibraryManagementSystem-WebApi\\LibraryManagement\\LibraryManagementAPI/logs/myapp.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}